datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(cuid())
  name    String?
  email   String?  @unique
  projects Project[]
}

model Project {
  id      String   @id @default(cuid())
  name    String
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  videos  Video[]
}

model Video {
  id        String   @id @default(cuid())
  url       String
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  tags      Tag[]
}

model Tag {
  id      String   @id @default(cuid())
  name    String
  videos  Video[]
}
